#!/usr/bin/perl

use strict;
use warnings;
use 5.10.0;

# standard modules
use Data::Dumper;
use FindBin;

# JobCenter
use lib "$FindBin::Bin/../lib";
use JobCenter::SimpleWorker;

exit main(@ARGV);

sub main {
	# what can we do
	my @actions = (
		['add', \&do_add],
		['square', \&do_square],
		['div', \&do_div],
	);

	my $worker = Jobcenter::SimpleWorker->new(
		cfgpath => "$FindBin::Bin/../etc/jobcenter.conf",
		debug => 0,
	);
	die 'no worker?' unless $worker;

	# announce our actions
	for my $action (@actions) {
		my ($actionname, $cb) = @$action;
		$worker->announce($actionname, $cb);
	}

	# work
	$worker->work();

	# FIXME: how do we stop?
	say "the end is nigh!";
	return 0;
}

sub do_add {
	my ($job_id, $vars) = @_;
	$vars->{counter} += $vars->{step} || 1;
}

sub do_square {
	my ($job_id, $vars) = @_;
	$vars->{square} = $vars->{root}**2;
}

sub do_div {
	my ($job_id, $vars) = @_;
	$vars->{quotient} = $vars->{dividend} / $vars->{divisor};
}

