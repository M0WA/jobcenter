# locks
workflow "locktest":
in:
	in string
out:
	out string;
wfomap:
	out = v.thing;
locks:
	foo bar
	abc def inherit
	slot _ manual
	schloss _ manual inherit
do:
	eval:
		thing = 'got ' . a.in
	lock slot 'sleutel'
	eval:
		thing .= ' and got lock "slot"'
	lock schloss 'schl√ºssel'
	eval:
		thing .= ' and got lock "schloss"'
	sleep:
		timeout = "11.55 seconds"
	eval:
		thing .= ' and did a nap'
	#unlock slot 'sleutel'
	unlock slot [[ 'sleutel' ]]
	eval:
		thing .= ' and unlocked lock "slot"'
