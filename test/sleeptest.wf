# sleep
workflow sleeptest:
in:
	in string
out:
	out string
	event json optional
wfomap:
	out = v.thing
	# do not return event because that complicates testing
	#event = ifdef(v.event)
do:
	wait_for_event:
		timeout = 3
	into:
		<event>
	if v.event.name == 'timeout':
		eval:
			thing = 'got timeout'
	else:
		eval:
			thing = 'got something else ' . tojson(v.event)
